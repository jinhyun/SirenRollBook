<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="io.example.jinhyun.attends.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UL"
            android:id="@+id/button_user_list"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"/>

    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginTop="126dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="elsa@gmail.com"
            android:id="@+id/user_email"
            android:hint="email"
            android:layout_alignParentStart="true" android:layout_below="@+id/user_name"
            android:layout_alignParentLeft="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="엘사"
            android:id="@+id/user_name"
            android:hint="name"
            android:layout_alignParentStart="true" android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="1234567890"
            android:id="@+id/user_password"
            android:hint="password"
            android:layout_alignParentStart="true" android:layout_below="@+id/user_email"
            android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/button_sign_up"
            android:onClick="signUp"
            android:layout_alignParentStart="true" android:layout_below="@+id/user_password"
            android:layout_alignParentLeft="true"/>
</RelativeLayout>
